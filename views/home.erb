<div class='progress-to-date'>
  <span class='active'><%= @active %></span> down, <span class='pending'><%= @threshold - @active %></span> to go.</span>
</div>

<ul class='invites'>
  <% (0...@threshold).each_with_index do |num, i| %>
    <% if @users[i] && user = $redis.hgetall("users:" + @users[i]) %>
      <li class='user'><% if user["link"] %><a href='<%= user["link"] %>' target='_blank'><% end %><img src="<%= user["image"] %>" width="24" height="24" title="<%= user["name"] %>" alt="<%= user["name"] %>"/><% if user["link"] %></a><% end %></li>
    <% else %>
      <li class='<%= i < @active ? "active" : "pending" %>'><%= i < @active ? "Active" : "Pending" %></li>
    <% end %>
  <% end %>
</ul>

<% if session[:user] %>
<div class='add-to-wall'>
  <b>Your name is up on the wall!</b> Thanks for helping us get Fiber to the Crossroads!
</div>
<% else %>
<div class='add-to-wall'>
